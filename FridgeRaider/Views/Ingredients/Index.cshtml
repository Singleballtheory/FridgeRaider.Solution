@{
    ViewData["Title"] = "Ingredients";
}

<div class="text-center">
<p>Click below to search for ingredients:</p>

<ul>
@foreach(char letter in ViewBag.FirstLetters)
{
  @Html.ActionLink($"{letter} ", "Index", new { letter = letter})
}
</ul>
</div>


<hr>

<style>
.threeIngredients {
  columns: 3;
  -webkit-columns: 3;
  -moz-columns: 3;
}
</style>

<ul class="threeIngredients">
@foreach (Ingredient ingredient in Model)
{
    <div class="ingredient">
        <li>@Html.ActionLink($"{ingredient.StrIngredient}", "Details", new { id = ingredient.IdIngredient })</li>
    </div>
}
</ul>